[Unit]
Description=OpenSMILE API Docker Container
After=docker.service watchme-infrastructure.service
Requires=docker.service watchme-infrastructure.service

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/opensmile
TimeoutStartSec=0
Restart=always
RestartSec=10

# Docker Composeを使用して起動
ExecStartPre=-/usr/bin/docker compose -f /home/ubuntu/watchme-server-configs/docker-compose-files/opensmile-api-docker-compose.prod.yml down
ExecStart=/usr/bin/docker compose -f /home/ubuntu/watchme-server-configs/docker-compose-files/opensmile-api-docker-compose.prod.yml up
ExecStop=/usr/bin/docker compose -f /home/ubuntu/watchme-server-configs/docker-compose-files/opensmile-api-docker-compose.prod.yml down

[Install]
WantedBy=multi-user.target
