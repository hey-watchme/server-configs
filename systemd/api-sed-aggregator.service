[Unit]
Description=API SED Aggregator Service
After=docker.service watchme-infrastructure.service
Requires=docker.service watchme-infrastructure.service

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/watchme-behavior-yamnet-aggregator
TimeoutStartSec=0
Restart=always
RestartSec=10

# Docker Composeを使用して起動
ExecStartPre=-/usr/bin/docker compose -f /home/ubuntu/watchme-server-configs/docker-compose-files/api-sed-aggregator-docker-compose.prod.yml down
ExecStart=/usr/bin/docker compose -f /home/ubuntu/watchme-server-configs/docker-compose-files/api-sed-aggregator-docker-compose.prod.yml up
ExecStop=/usr/bin/docker compose -f /home/ubuntu/watchme-server-configs/docker-compose-files/api-sed-aggregator-docker-compose.prod.yml down

[Install]
WantedBy=multi-user.target